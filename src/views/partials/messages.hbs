{{#if success_msg}}
<div class="alert alert-success aler-dismissible fade show">
    {{success_msg}}
    <button type="button" class="close" data-dismiss="alert" arial-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}
