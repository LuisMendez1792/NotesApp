{{#if error}}
    <div class="alert alert-danger aler-dismissible fade show">
    {{error}}
    <button type="button" class="close" data-dismiss="alert" arial-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}
{{#each errors}}
<div class="alert alert-danger aler-dismissible fade show">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" arial-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}